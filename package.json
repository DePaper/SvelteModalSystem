{
  "name": "@depaper/svelte-modal-system",
  "version": "0.3.2",
  "type": "module",
  "description": "Package that provides a svelte modal implementation",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "validate": "svelte-check",
    "bumpVersion": "npm version patch -m \"Bump version to %s\"",
    "deploy": "npm publish"
  },
  "module": "dist/index.mjs",
  "main": "dist/index.umd.js",
  "types": "dist/ts/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DePaper/SvelteModalSystem.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DePaper/SvelteModalSystem/issues"
  },
  "homepage": "https://github.com/DePaper/SvelteModalSystem",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "rollup": "^4.9.4",
    "rollup-plugin-execute": "^1.1.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-svelte": "^7.1.6",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^5.1.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "svelte",
    "modal",
    "system",
    "typescript"
